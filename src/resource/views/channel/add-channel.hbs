<div class="mt-4">
  <h1>Add Channel</h1>

  <form class="mt-4" method="POST" action="/channel/store" >

    <div class="form-group position-relative">
      <input
        name="name"
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="  "
        required
      />
      <label class="position-absolute" for="exampleInputEmail1">Channel Name</label>
    </div>
    <div class="form-group position-relative">
      <input
        name="image"
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        placeholder="  "
        required
      />
      <label class="position-absolute" for="exampleInputPassword1">Avatar</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>